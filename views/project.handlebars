<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{body_content}}</p>
  <p>Created by {{user.user_name}} on {{format_date date_created}}</p>

  {{#each comments as |comment| }}
  <div class="row mb-4 project">
    <div class="col-md-7">
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        {{!-- <a href="/project/{{blog.id}}">{{comment.title}}</a> --}}
      </h2>
    </div>
    <div class="col-md-7">
      <p>
        "{{comment.body_content}}"
      </p>
      <p>Comment by {{comment.user.user_name}} on {{format_date comment.date_created}}</p>
    </div>
  </div>
  {{/each}}

  <p>
    <button class="btn btn-primary">delete!</button>
  </p>
</div>
