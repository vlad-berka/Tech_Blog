<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{body_content}}</p>
  <p>Created by {{user.user_name}} on {{format_date date_created}}</p>

  {{#if logged_in}}
      <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-body_content">New Comment:</label>
        <input class="form-input" type="text" id="comment-body_content" name="comment-body_content" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{blog_id}}">Add Comment!</button>
      </div>
    </form>
  {{/if}}

  {{#each comments as |comment| }}
  <div class="row mb-4 project comment-list">
    <div class="col-md-7">
      <p>
        "{{comment.body_content}}"
      </p>
      <p>{{curr_use}}</p>
      <p>Comment by {{comment.user.user_name}} on {{format_date comment.date_created}}</p>
    </div>
  {{#if (isUser ../curr_use comment.user.id)}}
    <p>
      <button class="btn btn-primary" data-id="{{comment.id}}" data-blog_id="{{blog_id}}">delete!</button>
    </p>
  {{/if}}
  {{/each}}
  </div>
</div>

<script src="../js/blog.js"></script>